<%- include('header') -%>

<body class="leikir" >
    <section>
        <h2>Teams</h2>
        <ul>
          <% teams.forEach(function(team) { %>
            <li><%= team.name %></li>
          <% }); %>
        </ul>
    </section>
    <section>
        <h2>Games</h2>
        <table border="1">
            <thead>
                <tr>
                    <th>Game ID</th>
                    <th>Home Team ID</th>
                    <th>Away Team ID</th>
                    <th>Home Score</th>
                    <th>Away Score</th>
                </tr>
            </thead>
            <tbody>
                <% games.forEach(function(game) { %>
                    <tr>
                        <td><%= game.id %></td>
                        <td><%= game.home %></td> <!-- Displaying team IDs; consider enhancing to show names -->
                        <td><%= game.away %></td>
                        <td><%= game.home_score %></td>
                        <td><%= game.away_score %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </section>

</body>


<%- include('footer') -%>




